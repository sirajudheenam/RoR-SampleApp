%p#notice= notice
%h1 Sharks
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Facts
      %th{colspan: "3"}
  %tbody
    - @sharks.each do |shark|
      %tr
        %td= shark.name
        %td= shark.facts
        %td= button_to 'Show', shark_path(:id => shark.id), :method => :get , class: "btn btn-primary"
        %td= button_to 'Edit', edit_shark_path(:id => shark.id), :method => :get , class: "btn btn-primary"
        %td= button_to 'Destroy', shark_path(:id => shark.id), :method => :delete , class: "btn btn-warning"
%br/
= link_to 'New Shark', new_shark_path, class: "btn btn-secondary"
